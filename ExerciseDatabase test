import database.ExerciseDatabase;
import org.junit.jupiter.api.Assertions;
import org.junit.jupiter.api.DisplayName;
import org.junit.jupiter.api.TestInstance;


@TestInstance(TestInstance.Lifecycle.PER_CLASS)


public class ExerciseDatabaseTest {


    @org.junit.Test
    @DisplayName("Test Case [readExerciseTest]")
    public void readExerciseTest() {
        String exerciseType = "arms";
        String exercise = "plank push up";
        String expectedResult = "plank push up";
        String actual = ExerciseDatabase.readExercise(exerciseType, exercise);
        Assertions.assertEquals(expectedResult, actual);
        System.out.println("========================================");
        System.out.println("Expected = " + expectedResult);
        System.out.println("========================================");
        System.out.println("Actual = " + actual);

    } @org.junit.Test
